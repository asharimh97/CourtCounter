<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="id.asharimh.courtcounter.MainActivity">

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="18sp"
                android:textAllCaps="true"
                android:text="Team A"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"/>

            <TextView
                android:id="@+id/skorTeamA"
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="70sp"
                android:layout_marginBottom="15dp"/>

            <Button
                android:onClick="freeThrowTeamA"
                style="@style/btnTeamA"
                android:id="@+id/btnFreeA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Free throw"/>

            <Button
                android:onClick="twoPointsA"
                android:id="@+id/btn2A"
                android:text="+2 Points"
                style="@style/btnTeamA"/>

            <Button
                android:onClick="threePointsA"
                android:id="@+id/btn3A"
                android:text="+3 Points"
                style="@style/btnTeamA"/>

        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="18sp"
                android:textAllCaps="true"
                android:text="Team B"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"/>

            <TextView
                android:id="@+id/skorTeamB"
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="70sp"
                android:layout_marginBottom="15dp"/>

            <Button
                android:id="@+id/btnFreeB"
                android:text="Free throw"
                style="@style/btnTeamB"/>

            <Button
                android:id="@+id/btn2B"
                style="@style/btnTeamB"
                android:text="+2 Points" />

            <Button
                android:id="@+id/btn3B"
                style="@style/btnTeamB"
                android:text="+3 Points" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:text="Lihat hasil"
        android:id="@+id/btnHasil"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_above="@+id/btnReset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"/>

    <Button
        android:onClick="resetScore"
        android:layout_margin="15dp"
        android:id="@+id/btnReset"
        android:text="reset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
